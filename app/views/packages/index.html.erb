<div class="page-header">
  <h1>
    Packages
    <a href="/packages/new" class="btn btn-lg btn-success">New Package</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "packages_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :collected_eq, "Collected" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :collected_eq, "1", checked: ((params[:q] && params[:q][:collected_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :collected_eq, "0", checked: ((params[:q] && params[:q][:collected_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :collected_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :recipient_name_cont, "Recipient name contains" %>
    <%= f.text_field :recipient_name_cont, :class => "form-control", :placeholder => "Recipient name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usergteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userlteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Apartment Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='apartmentgteqcreated_atPicker'>
                  <%= f.text_field :apartment_created_at_gteq, :class => "form-control", :placeholder => "Apartment Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='apartmentlteqcreated_atPicker'>
                  <%= f.text_field :apartment_created_at_lteq, :class => "form-control", :placeholder => "Apartment Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#apartmentgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#apartmentlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#apartmentgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#apartmentlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#apartmentlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#apartmentgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/packages" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#packages_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Apartment</th>
        <th>Recipient name</th>
        <th>Collected</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @packages.each do |package| %>
      <tr>
        <td>
          <% if package.apartment.present? %>
            <a href="/apartments/<%= package.apartment.id %>">
              <%= package.apartment.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= package.recipient_name %></td>
        <td><%= package.collected %></td>
        <td><img src='<%= package.image %>' class='img-responsive'></td>
        <td>
          <% if package.user.present? %>
            <a href="/users/<%= package.user.id %>">
              <%= package.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/packages/<%= package.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == package.user %>
            <a href="/packages/<%= package.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_package/<%= package.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @packages, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

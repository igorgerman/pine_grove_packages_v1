<div class="page-header">
  <h3>Package #<%= @package.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Apartment</dt>
      <dd>
        <% if @package.apartment.present? %>
          <a href="/apartments/<%= @package.apartment_id %>">
            <%= @package.apartment.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Recipient name</dt>
      <dd><%= @package.recipient_name %></dd>

      <dt>Collected</dt>
      <dd><%= @package.collected %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @package.image %>" class="img-responsive"></dd>

      <dt>User</dt>
      <dd>
        <% if @package.user.present? %>
          <a href="/users/<%= @package.user_id %>">
            <%= @package.user.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/packages" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @package.user %>
        <a href="/packages/<%= @package.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_package/<%= @package.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

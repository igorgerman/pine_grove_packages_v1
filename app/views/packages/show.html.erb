<div class="page-header">
  <h3>Package #<%= @package.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Apartment</dt>
      <dd><%= @package.apartment_id %></dd>

      <dt>Recipient name</dt>
      <dd><%= @package.recipient_name %></dd>

      <dt>Collected</dt>
      <dd><%= @package.collected %></dd>

      <dt>Image</dt>
      <dd><%= @package.image %></dd>

      <dt>User</dt>
      <dd><%= @package.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/packages" class="btn btn-primary">
        Back
      </a>
      <a href="/packages/<%= @package.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_package/<%= @package.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
